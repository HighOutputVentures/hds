{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build --transpileOnly",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@highoutput/hds-loading-lite",
  "author": "Bon Andre Opina",
  "module": "dist/hds-loading-lite.esm.js",
  "size-limit": [
    {
      "path": "dist/hds-loading-lite.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/hds-loading-lite.esm.js",
      "limit": "10 KB"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react-lottie": "^1.2.3"
  },
  "devDependencies": {
    "@types/react-lottie": "^1.2.6",
    "jest-canvas-mock": "^2.4.0"
  }
}
