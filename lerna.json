{
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "package-lock.json"
      ],
      "message": "chore: publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "useNx": true
}
